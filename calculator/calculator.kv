<CalculatorLayout>:
    solution: solution

    BoxLayout:
        orientation: "vertical"
        TextInput:
            id: solution
            font_size: 50
            size_hint_y: None
            height: 100
            text: "0"
            multiline: False

        GridLayout:
            cols: 4
            rows: 4
            Button:
                text: "7"
                on_press: root.on_button_press(self)
            Button:
                text: "8"
                on_press: root.on_button_press(self)
            Button:
                text: "9"
                on_press: root.on_button_press(self)
            Button:
                text: "/"
                on_press: root.on_button_press(self)
            Button:
                text: "4"
                on_press: root.on_button_press(self)
            Button:
                text: "5"
                on_press: root.on_button_press(self)
            Button:
                text: "6"
                on_press: root.on_button_press(self)
            Button:
                text: "*"
                on_press: root.on_button_press(self)
            Button:
                text: "1"
                on_press: root.on_button_press(self)
            Button:
                text: "2"
                on_press: root.on_button_press(self)
            Button:
                text: "3"
                on_press: root.on_button_press(self)
            Button:
                text: "-"
                on_press: root.on_button_press(self)
            Button:
                text: "0"
                on_press: root.on_button_press(self)
            Button:
                text: "."
                on_press: root.on_button_press(self)
            Button:
                text: "C"
                on_press: root.on_button_press(self)
            Button:
                text: "+"
                on_press: root.on_button_press(self)
